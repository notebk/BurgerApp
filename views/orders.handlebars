<link rel="stylesheet" type="text/css" href="/stylesheets/stylesheet.css" media="screen" />

<h1 class="title">Burger Joint Ingredient Inventory System</h1>

<form id="order" action="ingredients" method="POST">
	<h3>Build Your Order</h3>
	Your Name: <input type="text" name="customer"></input>
	<br>
	<br> Choose Ingredients:
	<br> {{#each ingredient}}
	<br>
	<input type="checkbox" id="orderIng" name={{this.name}} value={{this.price}}> {{this.name}} | ${{this.price}}
	<br>
	</input>
	{{/each}}
    <br> Total $<span id="cost"></span>
    <br>
    <br>
	<input type="submit" value="Order">
</form>
<br>
<br>
<div id="result">
{{result}}
</div>
